<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:background="@drawable/list_selector" android:orientation="horizontal"
	android:padding="5dp">

	<!-- ListRow Left side Thumbnail image -->

	<LinearLayout android:id="@+id/thumbnail"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" android:layout_marginRight="5dip"
		android:background="@drawable/image_bg"
		android:padding="2dp">

	<ImageView android:id="@+id/list_image"
			android:layout_width="32dip" android:layout_height="32dip"
			android:src="@drawable/image_icon" />
	</LinearLayout>

	<TextView android:id="@+id/title" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/thumbnail" android:text=""
		android:textColor="#040404" android:textSize="15sp"
		android:textStyle="bold" android:typeface="sans" />

</RelativeLayout>